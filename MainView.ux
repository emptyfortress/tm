		<JavaScript>
			var Observable = require("FuseJS/Observable");
			var showLetter = Observable(false);
			var showRecord = Observable(false);
			var showTask = Observable(false);
			var showCard = Observable(false);
			var showAbout = Observable(false);
			var showReport = Observable(false);
			var showList = Observable(false);
			var showMainUser = Observable(false);
			var userMain = Observable(false);
			var viewComplete = Observable(false);
			var viewLoader = Observable(false);
			var viewTaskFilter = Observable(false);

			function toggleTaskFilter(){
				viewTaskFilter.value = !viewTaskFilter.value;
			}
			function toggleLetter(){
				showLetter.value = !showLetter.value;
			}
			function toggleRecord(){
				showRecord.value = !showRecord.value;
			}
			function toggleTask(){
				showTask.value = !showTask.value;
			}
			function toggleCard(){
				showCard.value = !showCard.value;
			}
			function toggleAbout(){
				showAbout.value = !showAbout.value;
			}
			function toggleReport(){
				showReport.value = !showReport.value;
			}
			function toggleList(){
				showList.value = !showList.value;
			}
			function toggleMainUser(){
				showMainUser.value = !showMainUser.value;
			}
			function setMain(){
				userMain.value = true;
				showMainUser.value = false;
			}
			function resetMain(){
				userMain.value = false;
				showMainUser.value = false;
			}
			function toggleComplete(){
				viewComplete.value = !viewComplete.value;
			}
			function completeOff(){
				viewComplete.value = false;
			}
			function taskOff(){
				viewTaskFilter.value = false;
			}
			function loader(){
				viewLoader.value = !viewLoader.value;
			}

			module.exports = {
				viewTaskFilter: viewTaskFilter,
				toggleTaskFilter: toggleTaskFilter,
				viewLoader: viewLoader,
				viewComplete: viewComplete,
				resetMain: resetMain,
				userMain: userMain,
				setMain: setMain,
				showLetter: showLetter,
				toggleLetter: toggleLetter,
				showRecord: showRecord,
				toggleRecord: toggleRecord,
				showTask: showTask,
				toggleTask: toggleTask,
				showCard: showCard,
				toggleCard: toggleCard,
				showAbout: showAbout,
				toggleAbout: toggleAbout,
				showReport: showReport,
				toggleReport: toggleReport,
				showList: showList,
				toggleList: toggleList,
				showMainUser: showMainUser,
				toggleMainUser: toggleMainUser,
				toggleComplete: toggleComplete,
				completeOff: completeOff,
				taskOff: taskOff,
				loader: loader
			}
		</JavaScript>

