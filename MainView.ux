									<fa-trash-o ux:Name="trash1"  Color="#fff" Alignment="CenterRight" Opacity="0" Margin="5,0,20,0" />
								</StackPanel>
							</Panel>
							<Rectangle>
								<SolidColor ux:Name="background" Color="red" Opacity="0" />
							</Rectangle>
							<RemovingAnimation>
								<Move RelativeTo="Size" Y="-1" Duration="0.6" Easing="CircularInOut" />
							</RemovingAnimation>
							<LayoutAnimation>
								<Move RelativeTo="LayoutChange" Y="1" Duration="0.6" Easing="CircularInOut" />
							</LayoutAnimation>
						</Panel>
		    		</Each>
		    	</StackPanel>
