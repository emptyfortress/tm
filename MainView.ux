<App Background="#ccccccff">
	<JavaScript>
		var Observable = require('FuseJS/Observable');
		var Bundle = require("FuseJS/Bundle");
		var items = JSON.parse(Bundle.readSync("Assets/data.json"));
		function syncTask(title, operation) {
				this.title = title;
				this.operation = operation;
			}
		
		var synctasks = Observable(
			new syncTask("Письмо о проведении аукциона", "Согласовано"),
			new syncTask("О рабочих программах 16-17", "Комментарий"),
			new syncTask("Ознакомиться с приказом", "Создано"),
			new syncTask("О подготовке приказа на отпуск Ивановой", "Завершено с комментарием")
		);
		function removeTask(title) {
				synctasks.remove(title.data);
			}

		module.exports = {
			synctasks: synctasks,
			removeTask: removeTask,
			items: items
		};
	</JavaScript>
	
	
