				<PageControl ux:Name="TheViewerCard" ClipToBounds="false">
					<NavigationMotion Overflow="Elastic"/>
					<Each Items="{items.cards1}" >
						<Page>
							<WhileActive Threshold=".5">
								<Set BlockColorAttractor.Value="green" />
								<Set BlockColor.Color="green" />
							</WhileActive>
							<TaskCard />
						</Page>
