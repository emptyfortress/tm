											<Set showSync.Value="false"/>
											<Set dashboardUp.Value="true" Delay=".4" />
											<Set ViewerVisible.Value="true" Delay=".4"/>
										</Tapped>
									</StackPanel>
								</Page>
								<Page>
									<ActivatingAnimation>
										<Change discardText1.Opacity="1" Easing="ExponentialOut" />
										<Change trash1.Opacity="1" Easing="ExponentialOut" />
										<Change trash1.FontSize="30" Easing="ExponentialOut" />
										<Change background.Opacity="1" Easing="ExponentialOut" />
									</ActivatingAnimation>
									<WhileActive>
