			    	</Tapped>
			    </StackPanel>
				<Image File="Assets/refresh.png" Color="#fff" Alignment="TopRight" Clicked="{loader}" />
			</Panel>
		    <ScrollView>
		    	<StackPanel ItemSpacing="2">
		    		<Each Items="{synctasks}">
		    			<Panel>
		    				<PageControl Active="contents">
								<Page>
									<ActivatingAnimation>
										<Change discardText.Opacity="1" Easing="ExponentialOut" />
										<Change trash.Opacity="1" Easing="ExponentialOut" />
										<Change trash.FontSize="30" Easing="ExponentialOut" />
										<Change background.Opacity="1" Easing="ExponentialOut" />
									</ActivatingAnimation>
									<WhileActive>
										<Callback Handler="{removeTask}" />
									</WhileActive>
								</Page>
		    					<Page ux:Name="contents">
