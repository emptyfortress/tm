<Panel Dock="Top">
	<PageIndicator ux:Name="folderIndicator" Navigation="_listNavigation" Alignment="TopRight" Layer="Overlay" Margin="5" Visibility="Visible">
		<Circle ux:Template="Dot" Fill="#fff" Margin="3" Width="5" Height="5">
			<Stroke Width="1" Color="#aaa" />
			<ActivatingAnimation>
                <Scale Factor="1.5"/>
                <Circle Fill="#888" />
            </ActivatingAnimation>
		</Circle>
	</PageIndicator>
</Panel>