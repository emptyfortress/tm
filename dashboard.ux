							</Rectangle>
						</Panel>
					</WhileWindowSize>
					<fa-calendar-o FontSize="20" Alignment="VerticalCenter"/>
				</Panel>
				<fa-search FontSize="20" Alignment="VerticalCenter">
					<Scaling X="-1" />
				</fa-search>
				<fa-bell-o FontSize="20" Alignment="VerticalCenter" />
				<fa-refresh FontSize="20" Alignment="VerticalCenter" >
					<WhileVisible>
				        <Spin Frequency=".2" />
				    </WhileVisible>
				</fa-refresh>
			</StackPanel>

