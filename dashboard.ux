			<StackPanel ux:Name="iconBar" Orientation="Horizontal" Margin="80,20,20,0" Alignment="TopRight" ItemSpacing="35">
				<Panel>
					<WhileWindowSize GreaterThan="450,450">
						<Change iconBar.ItemSpacing.Value="65" />
						<Change iconBar.Alignment.Value="TopLeft" />
