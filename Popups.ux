					<Rectangle Layer="Background" Color="#D5EAA8" Opacity=".3" CornerRadius="0,0,10,10"></Rectangle>
				</Panel>
				<Grid Columns="18,120,75,1*" Margin="0,5,0,0" Alignment="Top" CellSpacing="1">
					<Panel Color="#D5EAA8" Padding="5,10">
						<gridtext Value="2" />
					</Panel>
					<Panel Color="#D5EAA8" Padding="5,10">
