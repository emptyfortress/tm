				<Grid Columns="18,120,75,1*" Margin="0,5,0,0" Alignment="Top" CellSpacing="1">
					<Panel Color="#D5EAA8" Padding="5,10">
						<gridtext Value="1" />
					</Panel>
					<Panel Color="#D5EAA8" Padding="5,10">
					<gridtext Value="Орлов Г.С." />
					</Panel>
					<Panel Color="#D5EAA8" Padding="5,10">
					<gridtext Value="12.09.16" />
					</Panel>
					<Panel Color="#D5EAA8" Padding="5,10">
					<gridtext Value="Согласовано с замечаниями"  />
